{
    "name": "vdebes/php-boilerplate",
    "description": "PHP project starting point with commonly used tools preconfigured",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "vdebes",
            "email": "vdebes@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "vdebes\\phpboilerplate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "phpboilerplate\\tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.35"
    },
    "scripts": {
        "post-install-cmd": [
            "cp -rf .github/hooks/* .git/hooks"
        ],
        "test-coverage": [
            "php -dxdebug.mode=coverage bin/phpunit --coverage-clover coverage.xml"
        ],
        "test-unit": [
            "php -dxdebug.mode=coverage bin/phpunit --testdox"
        ],
        "pre-commit": [
            "vendor/bin/php-cs-fixer check",
            "vendor/bin/phpstan analyze src --configuration=phpstan.dist.neon",
            "@test-unit"
        ],
        "csfix": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "pre-push": []
    }
}
