    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12.6",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.8"
    }
}
